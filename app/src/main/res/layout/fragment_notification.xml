<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NotificationFragment"
    >
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:background="@drawable/passenger_profile_notification"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="276dp"
                android:background="@drawable/mywallet_passenger"
                app:layout_constraintBottom_toTopOf="@+id/imageView8" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/transaction_passenger" />

        </LinearLayout>



        <com.ebanx.swipebtn.SwipeButton
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/swipeBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:button_background="@drawable/button_design_swipe"
            app:button_bottom_padding="15dp"
            app:button_image_disabled="@drawable/ic_baseline_arrow_forward_ios_24_swipe"
            app:button_image_enabled="@drawable/ic_baseline_arrow_back_ios_24_swipe"
            app:button_left_padding="15dp"
            app:button_right_padding="15dp"
            app:button_top_padding="15dp"
            app:inner_text="Swipe to Home"
            app:inner_text_background="@drawable/text_design_swipe"
            app:inner_text_bottom_padding="15dp"
            app:inner_text_size="10sp"
            app:inner_text_top_padding="15dp">

        </com.ebanx.swipebtn.SwipeButton>

        <!-- TODO: Update blank fragment layout -->

    </RelativeLayout>

</ScrollView>

</FrameLayout>